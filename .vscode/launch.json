  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Plugin",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "${workspaceFolder}/packages/dd-trace/test/setup/*.js",
        "--timeout",
        "999999",
        "--colors",
        "--watch",
        "${workspaceFolder}/packages/datadog-plugin-${input:pluginName}/test/**/*.spec.js"
      ],
      "preLaunchTask": "Install Plugin Modules",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "${workspaceFolder}/packages/dd-trace/test/setup/*.js",
        "--timeout",
        "999999",
        "--colors",
        "--watch",
        "${file}",
      ],
      "preLaunchTask": "Install Plugin Modules",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "inputs": [
    {
      "id": "pluginName",
      "description": "The plugin name",
      "type": "pickString",
      "options": [
        "amqp10",
        "amqplib",
        "bluebird",
        "bunyan",
        "cassandra-driver",
        "connect",
        "dns",
        "elasticsearch",
        "express",
        "fastify",
        "generic-pool",
        "graphql",
        "hapi",
        "http",
        "http2",
        "ioredis",
        "knex",
        "koa",
        "memcached",
        "mongodb-core",
        "mysql",
        "mysql2",
        "net",
        "paperplane",
        "pg",
        "pino",
        "promise-js",
        "promise",
        "q",
        "redis",
        "restify",
        "router",
        "tedious",
        "when",
        "winston"
      ]
    }
  ]
}
